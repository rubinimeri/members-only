<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Homepage</title>
</head>
<body>
    <% if (!locals.user) { %>
        <p>Hello, please <a href="/login">Log In</a> or <a href="sign-up">Sign Up</a></p>
    <% } else { %>
        <% console.log(user) %>
        <p>Hello <%= user.username %>, would you like to <a href="/join-club">join the club</a>?</p>
        <form action="/logout" method="POST">
            <button type="submit">Logout</button>
        </form>
    <% } %>
</body>
</html>